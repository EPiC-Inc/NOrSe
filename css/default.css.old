@import url('https://fonts.googleapis.com/css?family=Roboto+Mono');

* {
  font-family: Roboto Mono, monospace;
}

a {
  color: cyan;
  transition-duration: .3s;
}

a:hover {
  color: blue;
  background: cyan;
}

body {
  background: rgb(50,50,50);
	margin: 0;
}

button {
	font-size: 24px;
  background: grey;
  border: 5px outset darkgrey;
  transition-duration: .3s;
  border-radius: 24px;
}

button:hover {
  background: silver;
  border: 5px inset darkgrey;
}

#content {
  color: darkgrey;
	margin-bottom: 80px;
	margin-left: 1%;
	margin-top: 80px;
}

#content button {
	margin-left: 32px;
}

header {
  background: darkcyan;
	size: 48px;
  padding-left: 1%;
  position: fixed;
  top: 0;
  width: 100%;
}

header button {
	font-size: 24px;
	height: 48px;
	margin-top: -24px;
	padding-bottom: 4px;
	position: absolute;
	top: 50%;
}

header .right {
	float: right;
	right: 2%;
}

form input {
  border-radius: 24px;
  font-size: 24px;
  height: 32px;
  padding: 0px 8px;
  width: 384px;
}

#login input {
  border-radius: 24px;
  font-size: 24px;
  height: 32px;
  padding: 0px 8px;
  width: 384px;
}

.msg .name {
  color: darkgrey;
  text-decoration: none;
}
.msg .name:hover {
  color: silver;
  background: #111;
}

#msgSender {
  background: silver;
  border: 3px inset darkgrey;
}

#msgForm {
  bottom: 0;
  margin-bottom: 16px;
  padding: 4px 0px;
  position: fixed;
  width: 100%;
}

#msgForm button {
  margin-left: 0;
}

#msgSender {
  border-radius: 20px;
  font-size: 20px;
  margin-right: .5%;
  padding: 4px 8px;
	width: 90%;
}

/* Stuff for the fancy menu */
.sidenav {
  background-color: #111;
  height: 100%;
  overflow-x: hidden;
  position: fixed;
  padding-top: 60px;
  top: 0;
  transition: 0.5s;
  width: 250px;
  z-index: 1;
  font-size: 25px;

}

.sidenav * {
	margin-left: 32px;
}

.sidenav-left {
	left: -250px;
}

.sidenav-right {
	right: -250px;
}

.sidenav a {
    color: #818181;
    text-decoration: none;
		padding: 8px 8px 8px 16px;
		font-size: 25px;
	display: block;
	transition: 0.3s;
}

.sidenav .closebtn {
	position: absolute;
	top: 0;
	right: 25px;
	font-size: 36px;
	margin-left: 50px;
}

.sidenav a:hover {
    background: #111;
    color: #f1f1f1;
}
